<div>
  <div>
    <h1>
      Book articles tag #<%= @the_book_articles_tag.id %> details
    </h1>

    <div>
      <div>
        <a href="/book_articles_tags">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_book_articles_tag/<%= @the_book_articles_tag.id %>">
          Delete book articles tag
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Tag
      </dt>
      <dd>
        <%= @the_book_articles_tag.tag_id %>
      </dd>

      <dt>
        Book article
      </dt>
      <dd>
        <%= @the_book_articles_tag.book_article_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_book_articles_tag.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_book_articles_tag.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit book articles tag
    </h2>

    <form action="/modify_book_articles_tag/<%= @the_book_articles_tag.id %>"  method="post" >
      <div>
        <label for="tag_id_box">
          Tag
        </label>

        <input type="text" id="tag_id_box" name="query_tag_id" value="<%= @the_book_articles_tag.tag_id %>">
      </div>

      <div>
        <label for="book_article_id_box">
          Book article
        </label>

        <input type="text" id="book_article_id_box" name="query_book_article_id" value="<%= @the_book_articles_tag.book_article_id %>">
      </div>

      <button>
        Update book articles tag
      </button>
    </form>
  </div>
</div>

<hr>
