<div>
  <div>
    <h1>
      List of all book articles tags
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new book articles tag
    </h2>

    <form action="/insert_book_articles_tag" method="post">
      <div>
        <label for="tag_id_box">
          Tag
        </label>

        <input type="text" id="tag_id_box" name="query_tag_id">
      </div>

      <div>
        <label for="book_article_id_box">
          Book article
        </label>

        <input type="text" id="book_article_id_box" name="query_book_article_id">
      </div>

      <button>
        Create book articles tag
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Tag
        </th>

        <th>
          Book article
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_book_articles_tags.each do |a_book_articles_tag| %>
      <tr>
        <td>
          <%= a_book_articles_tag.id %>
        </td>

        <td>
          <%= a_book_articles_tag.tag_id %>
        </td>

        <td>
          <%= a_book_articles_tag.book_article_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_book_articles_tag.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_book_articles_tag.updated_at) %> ago
        </td>

        <td>
          <a href="/book_articles_tags/<%= a_book_articles_tag.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
